<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <Button
        android:id="@+id/btnCalc_AM"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_above="@id/btnCalc_AM">
        <Button
            android:id="@+id/btn_a_AM"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_height"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/btn_oper_AM"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_height"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_b_AM"
            android:layout_width="0dp"
            android:layout_height="@dimen/view_height"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvRes_AM"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_below="@id/btnCalc_AM">
    </TextView>
    <Switch
        android:id="@+id/swt_theme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textOn="@string/switch_yes"
        android:textOff="@string/switch_no"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>


</RelativeLayout>